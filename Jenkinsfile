pipeline {
    agent any 
    environment {
        MAJOR = '1'
        MANOR = '0'
    }
    stages {
        stage("build") {
            steps {
                echo 'building the application..'    
            }    
                
        }
        
        stage("test") {
            steps {
                echo 'testing the application..'    
            }    
                
        }
        
        stage("deploy") {
            steps {
                echo 'deploying the application..'    
            }    
                
        }
    }
}
